<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼이 눌렸을 때 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B1B1B1" /> <!-- 눌렸을 때의 배경색 -->
            <corners android:radius="10dp" /> <!-- 눌렸을 때의 모서리 둥글기 -->
        </shape>
    </item>

    <!-- 기본 상태일 때 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 기본 상태일 때의 배경색 -->
            <corners android:radius="10dp" /> <!-- 기본 상태일 때의 모서리 둥글기 -->
        </shape>
    </item>
</selector>

